//Codigo de los coleres
void red (){
  printf("\033[0;31m");
}
void yellow (){
  printf("\033[0;33m");
}
void green (){
  printf ("\033[0;32m");
}
void blue (){
  printf ("\033[0;34m");
}
void magenta (){
  printf ("\033[0;35m");
}
void cyan (){
  printf ("\033[0;36m");
}
void boldgreen (){
  printf("\033[1;32m");
}
void boldred (){
  printf("\033[1;31m");
}
void reset (){
  printf ("\033[0m");
}
void clearscreen(){
    system("@cls||clear");
}

